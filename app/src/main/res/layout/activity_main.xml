<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/megabits"
        android:hint="@string/hint_megabits"
        android:gravity="center"
        android:textSize="24sp"
        android:textIsSelectable="false"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/instruccion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:maxLength="7"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/Bitspinner"
        android:layout_toStartOf="@+id/Bitspinner" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Bitspinner"
        android:spinnerMode="dropdown"
        android:entries="@array/ArrayBits"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/megabits"
        android:layout_above="@+id/descarga"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/igualdad_1"
        android:layout_toEndOf="@+id/igualdad_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hint_descarga"
        android:id="@+id/descarga"
        android:hint="@string/hint_descarga"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_below="@+id/megabits"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hint_instruccion"
        android:id="@+id/instruccion"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/hint_instruccion"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/hint_igualdad_1"
        android:id="@+id/igualdad_1"
        android:layout_marginTop="24sp"
        android:layout_below="@+id/descarga"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/hint_igualdad_2"
        android:id="@+id/igualdad_2"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/descarga"
        android:layout_alignStart="@+id/descarga"
        android:layout_marginTop="8sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1024 kilobytes = 1 megabyte"
        android:id="@+id/textView"
        android:layout_below="@+id/igualdad_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="8 kilobits = 1000 bytes"
        android:id="@+id/textView2"
        android:layout_below="@+id/igualdad_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8sp" />

</RelativeLayout>

