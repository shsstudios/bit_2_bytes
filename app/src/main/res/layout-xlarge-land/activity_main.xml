<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hint_instruccion"
        android:id="@+id/instruccion"
        android:layout_marginTop="60dp"
        android:hint="@string/hint_instruccion"
        android:textStyle="bold"
        android:textSize="27sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/megabits"
        android:hint="@string/hint_megabits"
        android:gravity="center"
        android:textSize="36sp"
        android:textIsSelectable="false"
        android:maxLength="7"
        android:maxLines="1"
        android:layout_below="@+id/instruccion"
        android:layout_alignLeft="@+id/instruccion"
        android:layout_alignStart="@+id/instruccion"
        android:layout_marginTop="60sp"
        android:layout_alignRight="@+id/instruccion"
        android:layout_alignEnd="@+id/instruccion" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bitspinner"
        android:spinnerMode="dropdown"
        android:entries="@array/ArrayBits"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/megabits"
        android:layout_alignLeft="@+id/megabits"
        android:layout_alignStart="@+id/megabits"
        android:layout_alignRight="@+id/megabits"
        android:layout_alignEnd="@+id/megabits" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/hint_descarga"
        android:id="@+id/descarga"
        android:hint="@string/hint_descarga"
        android:gravity="center"
        android:textSize="75sp"
        android:layout_alignTop="@+id/megabits"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/hint_igualdad_1"
        android:id="@+id/igualdad_1"
        android:textStyle="italic"
        android:textSize="24sp"
        android:layout_alignTop="@+id/instruccion"
        android:layout_marginRight="50sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/hint_igualdad_2"
        android:id="@+id/igualdad_2"
        android:textStyle="italic"
        android:textSize="24sp"
        android:layout_below="@+id/igualdad_1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50sp"
        android:layout_marginTop="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/hint_igualdad_3"
        android:id="@+id/igualdad_3"
        android:textStyle="italic"
        android:textSize="24sp"
        android:layout_below="@+id/igualdad_2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50sp"
        android:layout_marginTop="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/hint_igualdad_4"
        android:id="@+id/igualdad_4"
        android:textStyle="italic"
        android:textSize="24sp"
        android:layout_below="@+id/igualdad_3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50sp"
        android:layout_marginTop="30sp" />

</RelativeLayout>