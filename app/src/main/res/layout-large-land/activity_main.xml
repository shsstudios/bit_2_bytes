<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/megabits"
                android:hint="@string/hint_megabits"
                android:gravity="center"
                android:textSize="50sp"
                android:textIsSelectable="false"
                android:layout_column="1" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Bitspinner"
                android:spinnerMode="dropdown"
                android:layout_column="2"
                android:layout_span="0"
                android:layout_weight="0"
                android:entries="@array/ArrayBits" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/hint_descarga"
                android:id="@+id/descarga"
                android:hint="@string/hint_descarga"
                android:gravity="center"
                android:textSize="80sp"
                android:layout_column="1"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:layout_span="2"
                android:textIsSelectable="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1 Byte = 8 Bits"
                android:id="@+id/textView"
                android:layout_column="1"
                android:layout_span="2"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1024 Bytes = 1 Kilobyte"
                android:id="@+id/textView2"
                android:layout_column="1"
                android:layout_span="2"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="20sp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
